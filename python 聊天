    <script>
        // ğŸ”¥ æ›¿æ¢ä¸ºä½ çš„ Firebase é…ç½®
        const firebaseConfig = {
            apiKey: "AIzaSyDuuE951y8_draZ1f73VWNo3AxXnucbZZs",
            authDomain: "python-chat-room-61a2a.firebaseapp.com",
            projectId: "python-chat-room-61a2a",
            storageBucket: "python-chat-room-61a2a.firebasestorage.app",
            messagingSenderId: "10726442398e",
            appId: "1:18726442398e:web:419c2baac4b55ec68e119"
        };

        // åˆå§‹åŒ– Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        let currentUser = 'æ¸¸å®¢_' + Math.floor(Math.random() * 1000);
        let messageCount = 0;

        // è®¾ç½®é»˜è®¤ç”¨æˆ·å
        document.getElementById('username').value = currentUser;

        // ç›‘å¬æ¶ˆæ¯å˜åŒ–
        db.collection('messages')
            .orderBy('timestamp', 'asc')
            .onSnapshot((snapshot) => {
                const chat = document.getElementById('chat-messages');
                
                snapshot.docChanges().forEach((change) => {
                    if (change.type === 'added') {
                        const data = change.doc.data();
                        addMessageToUI(data.user, data.text, data.timestamp);
                    }
                });
            });

        // ç›‘å¬åœ¨çº¿ç”¨æˆ·
        const onlineUsersRef = db.collection('online').doc('users');
        
        // ç”¨æˆ·ä¸Šçº¿
        function userOnline() {
            const username = document.getElementById('username').value || currentUser;
            onlineUsersRef.set({
                [username]: firebase.firestore.FieldValue.serverTimestamp()
            }, { merge: true });
        }

        // ç›‘å¬åœ¨çº¿ç”¨æˆ·å˜åŒ–
        onlineUsersRef.onSnapshot((doc) => {
            if (doc.exists()) {
                const users = doc.data();
                const count = Object.keys(users).length;
                document.getElementById('online-count').textContent = count;
                
                // ç§»é™¤30ç§’æœªæ´»åŠ¨çš„ç”¨æˆ·
                const now = Date.now();
                Object.keys(users).forEach(user => {
                    if (now - users[user].toDate().getTime() > 30000) {
                        const update = {};
                        update[user] = firebase.firestore.FieldValue.delete();
                        onlineUsersRef.update(update);
                    }
                });
            }
        });

        function addMessageToUI(user, message, timestamp) {
            const chat = document.getElementById('chat-messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message';
            
            const time = new Date(timestamp?.toDate() || new Date());
            const timeStr = time.getHours().toString().padStart(2, '0') + ':' + 
                           time.getMinutes().toString().padStart(2, '0') + ':' + 
                           time.getSeconds().toString().padStart(2, '0');
            
            messageDiv.innerHTML = 
                '<span class="user">' + user + '</span>: ' + 
                message + 
                '<span class="time">' + timeStr + '</span>';
            
            chat.appendChild(messageDiv);
            chat.scrollTop = chat.scrollHeight;
        }

        function sendMessage() {
            const messageInput = document.getElementById('message-input');
            const username = document.getElementById('username').value || currentUser;
            const message = messageInput.value.trim();
            
            if (message) {
                // ä¿å­˜æ¶ˆæ¯åˆ° Firebase
                db.collection('messages').add({
                    user: username,
                    text: message,
                    timestamp: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                messageInput.value = '';
                
                // æ›´æ–°åœ¨çº¿çŠ¶æ€
                userOnline();
            }
        }

        // äº‹ä»¶ç›‘å¬
        document.getElementById('message-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        document.getElementById('username').addEventListener('change', function() {
            userOnline();
        });

        // é¡µé¢åŠ è½½æ—¶è®¾ç½®åœ¨çº¿çŠ¶æ€
        window.addEventListener('load', function() {
            userOnline();
            // æ¯20ç§’æ›´æ–°ä¸€æ¬¡åœ¨çº¿çŠ¶æ€
            setInterval(userOnline, 20000);
        });

        // è‡ªåŠ¨èšç„¦åˆ°è¾“å…¥æ¡†
        document.getElementById('message-input').focus();
    </script>
